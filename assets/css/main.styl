grey  = #182422
lcyan = #CFE6E3
cyan  = #00EDE4
title = Impact, Regular
body  = Helvetica, Regular
/*Main*/
*
	margin 0
html, body 
	width 100vw
	height 100vh
	font 20px body
	font-weight 300
	color white
	background grey
.mobile
	display block
.desktop
	display none
.container 
	width 100vw
	height auto
	display flex
	flex-direction column
	justify-content space-evenly
	align-items center
img 
	width 100%
	height auto
button 
	width 100px
	height 32px
	background cyan
	color black
	border none
	border-radius 7px
	cursor pointer
input 
	width 195px
	height 30px
	border none
	border-radius 7px
	background white
::placeholder
	color grey
	padding-left .5rem
.logo 
	width 250px
.menuIcon
	width 50px
	height 50px
/*Typography*/
h2 
	font-size 25px
	text-align center
	transform uppercase
	color white
	letter-spacing 2.5px
	margin-bottom 1rem
a
	color inherit
	text-decoration none
/*Header*/
header
	width 100vw
	height 10vh
	display flex
	justify-content space-around
	align-items center
#slider 
	width 0 
	height 100vh 
	display grid
	place-items center
	position absolute
	left 0
	top 0
	background grey
	z-position 1
	padding 0
	margin 0
	.close
		font-size 2rem
		position absolute
		top 5px
		right 30px
	nav 
		width 75vw
		height 75vh
		display none
		flex-direction column
		justify-content space-evenly
		align-items center
		margin-top 4rem
/*Footer*/
footer 
	width 100vw
	height 20vh
	font-size 12px
	display flex
	flex-direction column
	justify-content space-evenly
	align-items center
.footer-top
	font-size 18px
.footer-bottom 
	width 90vw
	flex-direction row
	margin 0 auto
/*Utilities*/
.hero 
	width 100vw
	height 70vh
	background-position center
	background-repeat no-repeat
	background-size cover
.imggrid
	width 80vw
	height auto
	display flex
	flex-direction column
	justify-content space-evenly
	align-items center
	margin 0 auto
	img
		margin-bottom 1.5rem
.flex-container
	display flex
	justify-content space-around
	align-items center
.product
	width 250px
	height 300px
	display flex
	flex-direction column
	justify-content space-evenly
	align-items center
	text-align center
	margin-bottom 4rem
.contact-details
	height 400px
	display flex
	flex-direction column
	justify-content space-around
	align-items center
	text-align center
	text-transform uppercase
	margin-top -3rem
.contact-highlight
	font-weight 400
	text-decoration underline
#social
	width 80vw
	margin 0 auto
#social img
	width 50px
	height 50px
@media(min-width: 760px)
	.mobile
		display none
	.desktop
		display flex
	header 
		height 15vh
		flex-direction column
		align-items center
		margin 0 auto

		nav
			width 600px
			display flex
			justify-content space-around
			align-items center
			text-transform uppercase
	h2
		text-align left
		
	.menuIcon
		display none
	#social
		width 40vw
	#recent 
		width 80vw
		margin 0 auto
	.imggrid
		flex-direction row
		flex-wrap wrap
		img
			width 200px
			height 200px
	.container
		width 80vw
		margin 0 auto
	.product
		width 200px
		align-items flex-start
	.map
		max-width 700px
		max-height 500px
		margin 0 auto
	.contact-details
		width 685px
		height 200px
		align-items flex-start
		text-align left
		margin 0 auto
@media(min-width: 761px) and (max-width: 1025px)
	.imggrid
		width 70vw
		img
			margin 0
@media(min-width: 1026px) and (max-width: 1112px)
	.imgrgrid img 
		width 300px
		height 300px

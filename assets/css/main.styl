grey  = #182422
lcyan = #CFE6E3
cyan  = #00EDE4
title = Impact, Regular
body  = Helvetica, Regular
/*Main*/
html, body 
	width 100vw
	height 100vh
	font 20px body
	font-weight 300
	color white
	background grey
.container 
	width 100vw
	height auto
	display flex
	flex-direction column
	justify-content space-evenly
	align-items center
img 
	border 1px solid red
	width 100%
	height auto
button 
	width 100px
	height 32px
	background cyan
	color black
	border none
	border-radius 7px
	cursor pointer
input 
	width 195px
	height 30px
	border none
	border-radius 7px
	background white
::placeholder
	color grey
	padding-left .5rem
/*Typography*/
h2 
	font-size 25px
	text-align center
	transform uppercase
	color white
	letter-spacing 2.5px
a
	color inherit
	text-decoration none
/*Header*/
header
	width 100vw
	height 10vh
	display flex
	justify-content space-around
	align-items center
.slider 
	width 0vw
	height 100vw
	display flex
	justify-content center
	align-items center
.slider nav 
	width 75vw
	height 75vh
	display flex
	flex-direction column
	justify-content space-evenly
	align-items center
/*Footer*/
footer 
	width 100vw
	height 20vh
	font-size 12px
	display flex
	flex-direction column
	justify-content space-evenly
	align-items center
.footer-top
	font-size 18px
.footer-bottom 
	width 90vw
	flex-direction row
	margin 0 auto
/*Utilities*/
.hero 
	width 100vw
	height 70vh
	background-position center
	background-repeat no-repeat
	background-size cover
.imggrid
	width 80vw
	height auto
	display flex
	flex-direction column
	justify-content space-evenly
	align-items center
	margin 0 auto
.flex-container
	display flex
	justify-content space-around
	align-items center
#social
	width 80vw
	margin 0 auto
#social img
	width 50px
	height 50px
